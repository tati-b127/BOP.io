{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "lib": [
      "DOM",
      "es2018",
      "esnext",
      "ES6",
      "DOM.Iterable",
      "ScriptHost"
    ],
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": { },
    "typeRoots": [
      "node_modules/@types",
      "./typings.d.ts",
      "**/node_modules/@types"
    ]
  },
  "exclude": ["node_modules"],
  "include": [
    "typings.d.ts",
    "**/src/**/*"
  ]
}
